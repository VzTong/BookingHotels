@model IEnumerable<App.Web.ViewModels.Hotel.BranchHotelVM>

<div class="site-section">
	<div class="container">
		<div class="row">
			<div class="col-md-6 mx-auto text-center mb-5 section-heading">
				<h2 class="mb-5">Giới thiệu địa điểm</h2>
			</div>
		</div>
		<div class="row no-gutters">
			<div class="container text-center">
                <div class="row">
                    @foreach (var item in Model.Take(2))
                    {
                        var imgSrc = item.Img.StartsWith("https", StringComparison.OrdinalIgnoreCase) ? item.Img : "/" + item.Img;

                        <div class="col p-1">
                            <a href="@imgSrc" class="image-popup img-opacity">
                                <img src="@imgSrc" alt="@item.Name" class="img-fluid" style="height: 365px; object-fit:cover">
                            </a>
                        </div>
                    }
                </div>
                <div class="row mt-3">
                    @foreach (var item in Model.Skip(2))
                    {
                        var imgSrc = item.Img.StartsWith("https", StringComparison.OrdinalIgnoreCase) ? item.Img : "/" + item.Img;

                        <div class="col p-1">
                            <a href="@imgSrc" class="image-popup img-opacity">
                                <img src="@imgSrc" alt="@item.Name" class="img-fluid" style="height: 240px; object-fit:cover">
                            </a>
                        </div>
                    }
                </div>
			</div>
		</div>
	</div>
</div>