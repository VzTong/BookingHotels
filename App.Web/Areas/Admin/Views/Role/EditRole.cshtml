@model App.Web.Areas.Admin.ViewModels.Role.RoleEditVM
@{
	ViewData["Title"] = "Cập nhật quyền";
}
<div class="row">
	<div class="col-12">
		<div class="page-title-box d-sm-flex align-items-center justify-content-between">
			<h4 class="mb-sm-0">Quản lý phân quyền</h4>

			<div class="page-title-right">
				<ol class="breadcrumb m-0">
					<li class="breadcrumb-item"><a asp-action="Index" asp-area="Admin" asp-controller="Home">Bảng tổng quan</a></li>
					<li class="breadcrumb-item active"><a asp-action="Index" asp-area="Admin" asp-controller="Role">Quyền</a></li>
					<li class="breadcrumb-item active">Cập nhật quyền</li>
				</ol>
			</div>

		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header align-items-center d-flex">
				<h4 class="card-title mb-0">Cập nhật quyền</h4>
			</div><!-- end card header -->

			<div class="card-body">
				<div id="customerList">
					<div class="row gy-4">
						<form asp-action="EditRole" autocomplete="off" class="row g-3 needs-validation" novalidate>
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="row">
								<div class="col-md-12">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<input asp-for="PermissionIds" class="d-none" />
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label asp-for="Name" class="control-label">Tên quyền</label>
												<input asp-for="Name" class="form-control" id="roleName-field" />
												<span asp-validation-for="Name" class="text-danger"></span>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label asp-for="Desc" class="control-label">Mô tả</label>
												<textarea asp-for="Desc" class="form-control" id="roleDesc-field"></textarea>
												<span asp-validation-for="Desc" class="text-danger"></span>
											</div>
										</div>
									</div>
								</div>
								<div class="col-12 my-3">
									<h5>Các hành động được phép</h5>
									<span asp-validation-for="PermissionIds" class="text-danger"></span>
								</div>
								@await Component.InvokeAsync("Permission")
							</div>
							<div class="form-group">
								<button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Lưu</button>
							</div>
						</form>
					</div>
					<div class="d-flex justify-content-end">
						<div class="pagination-wrap hstack gap-2">
							<partial name="_BackToList" />
						</div>
					</div>
				</div>
			</div><!-- end card -->
		</div>
		<!-- end col -->
	</div>
	<!-- end col -->
</div>
<!-- end row -->
@section Scripts {
	<script src="~/adminLTE/libs/prismjs/prism.js"></script>
	<script src="~/adminLTE/js/pages/form-validation.init.js"></script>
	<script src="~/js/admin/role/role-validate.js"></script>
	<script src="~/lib/masonry/masonry.pkgd.min.js" asp-append-version="true"></script>
	<script src="~/js/admin/role/create-edit-role.js" asp-append-version="true"></script>
}