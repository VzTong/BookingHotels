@model App.Web.Areas.Admin.ViewModels.Account.ChangePassword

<div id="mChangePassword" class="modal fade fadeInRight" tabindex="-1" aria-labelledby="changePasswordLabel" aria-hidden="true" style="display: none;">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header d-block">
				<h4 class="modal-title text-primary" id="changePasswordLabel">Đổi mật khẩu</h4>
				<p class="text-muted mb-4">Mật khẩu mới của bạn phải khác với mật khẩu đã sử dụng trước đó.</p>
			</div>
			<div class="modal-body">
				<form asp-action="ChangePassword" asp-controller="Account" asp-area="Admin" method="post">
					<div class="mb-3">
						<label asp-for="Pwd" class="form-label" for="old-password-input">Nhập lại mật khẩu cũ</label>
						<div class="position-relative auth-pass-inputgroup">
							<input asp-for="Pwd" id="old-password-input" type="password" class="form-control pe-5 password-input" onpaste="return false" placeholder="Nhập lại mật khẩu cũ" required>
							<button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="old-password-input"><i class="ri-eye-fill align-middle"></i></button>
						</div>
						<div>
							<span asp-validation-for="Pwd" data-valmsg-replace=true class="text-danger"></span>
						</div>
					</div>

					<div class="mb-3">
						<label asp-for="NewPwd" class="form-label" for="new-password-input">Mật khẩu mới</label>
						<div class="position-relative auth-pass-inputgroup">
							<input asp-for="NewPwd" id="new-password-input" type="password" class="form-control pe-5 password-input" onpaste="return false" placeholder="Mật khẩu mới" required>
							<button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="new-password-input"><i class="ri-eye-fill align-middle"></i></button>
						</div>
						<div>
							<span asp-validation-for="NewPwd" data-valmsg-replace=true class="text-danger"></span>
						</div>
					</div>
					
					<div id="password-contain" class="p-3 bg-light mb-2 rounded">
						<h5 class="fs-14">Mật khẩu phải:</h5>
						<p id="pass-length" class="invalid fs-13 mb-2">Tối thiểu <b>4 ký tự (hoặc số)</b></p>
					</div>

					<div class="mb-3">
						<label asp-for="ConfirmPassword" class="form-label" for="confirm-password-input">Xác nhận lại mật khẩu</label>
						<div class="position-relative auth-pass-inputgroup mb-3">
							<input asp-for="ConfirmPassword" id="confirm-password-input" type="password" class="form-control pe-5 password-input" onpaste="return false" placeholder="Xác nhận mật khẩu" required>
							<button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="confirm-password-input"><i class="ri-eye-fill align-middle"></i></button>
						</div>
						<div>
							<span asp-validation-for="ConfirmPassword" data-valmsg-replace=true class="text-danger"></span>
						</div>
					</div>

					<div class="form-check">
						<input class="form-check-input" checked id="auth-logout-check" asp-for="LogoutAfterChangePwd">
						<label class="form-check-label" for="auth-logout-check">Đăng xuất sau khi đổi mật khẩu</label>
					</div>
					<div class="mt-4 modal-footer">
						<button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
						<button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- password-addon init -->
<script src="~/adminLTE/js/pages/passowrd-create.init.js" asp-append-version="true"></script>

<!-- Modal Js -->
<script src="~/adminLTE/js/pages/modal.init.js"></script>