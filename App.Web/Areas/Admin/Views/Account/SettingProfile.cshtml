@model App.Web.Areas.Admin.ViewModels.Account.UpdateUserViewModel
@using System.Security.Claims
@using App.Web.WebConfig.Consts
@{
    ViewData["Title"] = "Tài khoản của tôi";
}

<div class="position-relative mx-n4 mt-n4">
    <div class="profile-wid-bg profile-setting-img">
        <img src="~/adminLTE/images/profile-bg.jpg" class="profile-wid-img" alt="">
        <div class="overlay-content">
            <div class="text-end p-3">
                <div class="p-0 ms-auto rounded-circle profile-photo-edit">
                    <input id="profile-foreground-img-file-input" type="file" class="profile-foreground-img-file-input">
                    <label for="profile-foreground-img-file-input" class="profile-photo-edit btn btn-light">
                        <i class="ri-image-edit-line align-bottom me-1"></i> Change Cover
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xxl-3">
        <div class="card mt-n5">
            <div class="card-body p-4">
                <div class="text-center">
                    <form method="post" asp-action="ChangeAvt" asp-controller="Account" asp-area="Admin" enctype="multipart/form-data">
                        <div class="profile-user position-relative d-inline-block mx-auto  mb-4">
                            <img src="@Context.User.FindFirstValue(AppClaimTypes.Avatar)" class="rounded-circle avatar-xl img-thumbnail user-profile-image" alt="user-profile-image">
                            <div class="avatar-xs p-0 rounded-circle profile-photo-edit">
                                <input id="profile-img-file-input" type="file" asp-for="@Model.AvatarUpload" class="profile-img-file-input">
                                <label for="profile-img-file-input" class="profile-photo-edit avatar-xs">
                                    <span class="avatar-title rounded-circle bg-light text-body">
                                        <i class="ri-camera-fill"></i>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </form>
                    <h5 class="fs-17 mb-1">@Model.FullName</h5>
                    <p class="text-muted mb-0">@Model.RoleName</p>
                </div>
            </div>
        </div>
    </div>
    <!--end col-->
    <div class="col-xxl-9">
        <div class="card mt-xxl-n5">
            <div class="card-body p-4">
                <div class="tab-content">
                    <div class="tab-pane active" id="personalDetails" role="tabpanel">
                        <form method="post" asp-area="Admin" asp-controller="Account" asp-action="MyProfile" class="row g-3 needs-validation" novalidate>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="firstnameInput" class="form-label">
                                            Họ tên
                                        </label>
                                        <input type="text" class="form-control" id="firstnameInput" asp-for="FullName" placeholder="@(Model.FullName ?? "Họ và tên")" required>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập họ và tên.
                                        </div>
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="lastnameInput" class="form-label">
                                            UserName
                                        </label>
                                        <input type="text" class="form-control" id="lastnameInput" asp-for="Username" placeholder="@(Model.Username ?? "User name")" required>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập Username.
                                        </div>
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="phonenumber1Input" class="form-label">
                                            Số điện thoại (1)
                                        </label>
                                        <input type="text" class="form-control" id="phonenumber1Input" maxlength="15" asp-for="PhoneNumber1" placeholder="@(Model.PhoneNumber1 ?? "+(84) 987 654 37")" required>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập số điện thoại.
                                        </div>
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="phonenumber2Input" class="form-label">
                                            Số điện thoại (2)
                                        </label>
                                        <input type="text" class="form-control" id="phonenumber2Input" maxlength="15" asp-for="PhoneNumber2" placeholder="@(Model.PhoneNumber2 ?? "+(84) 987 654 37")">
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="emailInput" class="form-label">
                                            Email
                                        </label>
                                        <input type="email" class="form-control" id="emailInput" asp-for="Email" placeholder="@(Model.Email ?? "Email: user@example.com")" required>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập email.
                                        </div>
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="addressInput" class="form-label">
                                            Địa chỉ
                                        </label>
                                        <input type="text" class="form-control" id="addressInput" asp-for="Address" placeholder="@(Model.Address ?? "Địa chỉ")" required>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập địa chỉ.
                                        </div>
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        <label for="citizenInput" class="form-label">Số căn cước</label>
                                        <input type="text" class="form-control" id="citizenInput" maxlength="12" asp-for="CitizenId" placeholder="@(Model.CitizenId ?? "012345678901")" />
                                        <div class="invalid-feedback">
                                            Vui lòng nhập số căn cước hoặc một trong các trường khác.
                                        </div>
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        <label for="passportInput" class="form-label">Mã hộ chiếu</label>
                                        <input type="text" class="form-control" id="passportInput" maxlength="12" asp-for="Passport" placeholder="@(Model.Passport ?? "X12345678")" />
                                        <div class="invalid-feedback">
                                            Vui lòng nhập mã hộ chiếu hoặc một trong các trường khác.
                                        </div>
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        <label for="permanentInput" class="form-label">
                                            Số thẻ thường trú/ tạm trú
                                        </label>
                                        <input type="text" class="form-control" id="permanentInput" maxlength="15" asp-for="Permanent" placeholder="@(Model.Permanent ?? "ABC1234567890")">
                                        <div class="invalid-feedback">
                                            Vui lòng nhập số thẻ thường trú/ tạm trú hoặc một trong các trường khác.
                                        </div>
                                    </div>
                                </div>
                                <!--end col-->
                                <div class="col-lg-12">
                                    <div class="hstack gap-2 justify-content-end">
                                        <button type="submit" class="btn btn-primary">Updates</button>
                                        <button type="button" class="btn btn-soft-success">Cancel</button>
                                    </div>
                                </div>
                                <!--end col-->
                            </div>
                            <!--end row-->
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
@section Scripts {
    <script src="~/adminLTE/libs/prismjs/prism.js"></script>
    <script src="~/adminLTE/js/pages/form-validation.init.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var form = document.querySelector('form.needs-validation');
            var citizenInput = document.getElementById('citizenInput');
            var passportInput = document.getElementById('passportInput');
            var permanentInput = document.getElementById('permanentInput');

            function validateFields() {
                var citizenValue = citizenInput.value.trim();
                var passportValue = passportInput.value.trim();
                var permanentValue = permanentInput.value.trim();

                if (!citizenValue && !passportValue && !permanentValue) {
                    citizenInput.classList.add('is-invalid');
                    passportInput.classList.add('is-invalid');
                    permanentInput.classList.add('is-invalid');
                    return false;
                } else {
                    citizenInput.classList.remove('is-invalid');
                    passportInput.classList.remove('is-invalid');
                    permanentInput.classList.remove('is-invalid');
                    return true;
                }
            }

            citizenInput.addEventListener('input', validateFields);
            passportInput.addEventListener('input', validateFields);
            permanentInput.addEventListener('input', validateFields);

            form.addEventListener('submit', function (event) {
                if (!validateFields() || form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    </script>
}