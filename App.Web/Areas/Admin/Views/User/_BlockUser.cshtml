   <!-- Modal -->
<div class="modal fade zoomIn" id="blockUser" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-top">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title js-name"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="btn-close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="BlockUser" asp-controller="User" asp-area="Admin">
                    <div class="mt-2 text-center">
                        <input type="hidden" id="Id" name="Id" />
                        <div class="form-group">
                            <label class="form-label">Khóa đến ngày</label>
                            <input name="BlockedTo" type="text" class="form-control js-date" data-provider="flatpickr" data-date-format="d.m.y" data-enable-time>
                            <span class="text-danger js-message"></span>
                        </div>
                        <div class="form-check mt-3">
                            <label class="form-check-label">
                                <input class="form-check-input js-check" value="true" name="Permanentblock" type="checkbox">
                                Khóa vĩnh viễn
                            </label>
                            <span class="text-danger js-message"></span>
                        </div>
                    </div>
                    <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                        <button type="submit" class="btn btn-primary js-succes-block">Khóa tài khoản</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--end modal -->
@* Include Flatpickr JS *@
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/vn.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        flatpickr('.js-date', {
            altInput: true,
            altFormat: "j F, Y H:i",
            dateFormat: "Y-m-d H:i",
            enableTime: true, // Enable time selection
            locale: "vn" // Set the locale to Vietnamese
        });
    });
</script>