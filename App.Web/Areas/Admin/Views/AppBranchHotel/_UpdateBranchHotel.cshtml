<!-- Modal -->
<div class="modal fade zoomIn" id="updateBranchHotel" tabindex="-1" aria-labelledby="updateBranchHotelLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="updateBranchHotelLabel">Cập nhật chi nhánh</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<hr />
			<form asp-action="Update" asp-controller="AppBranchHotel" asp-area="Admin" method="POST" autocomplete="off" enctype="multipart/form-data">
				<div class="modal-body">
					<input type="hidden" id="idEdit" name="Id" />
					<div class="modal-body ml-4 col-sm-12 justify-content-center align-items-center d-flex">
						<div class="d-block col-6">
							<div class="mb-3">
								<label for="branchName-field" class="form-label">Tên chi nhánh</label>
								<input type="text" id="branchName-field" class="form-control" name="Name" placeholder="Tên chi nhánh" required />
								<div class="invalid-feedback">
									Vui lòng nhập tên chi nhánh.
								</div>
							</div>
							<div class="mb-3">
								<label for="branchAddress-field" class="form-label">Địa chỉ</label>
								<input type="text" id="branchAddress-field" class="form-control" name="Address" placeholder="Tên địa chỉ" required />
								<div class="invalid-feedback">
									Vui lòng nhập địa chỉ.
								</div>
							</div>
							<div class="mb-3">
								<label for="branchIdMap-field" class="form-label">Địa chỉ trên Map</label>
								<input type="text" id="branchIdMap-field" class="form-control" name="IdMap" placeholder="Đường dẫn map" required />
								<div class="invalid-feedback">
									Vui lòng nhập địa chỉ map.
								</div>
							</div>
							<div class="mb-3 d-flex">
								<div class="col-3">
									<label for="branchQuantityStaff-field" class="form-label">Số lượng NV</label>
									<input type="number" id="branchQuantityStaff-field" class="form-control" name="QuantityStaff" placeholder="Số lượng nhân viên" required />
									<div class="invalid-feedback">
										Vui lòng nhập số lượng nhân viên.
									</div>
								</div>
								<div class="col-3 ms-3">
									<label for="branchQuantityFloor-field" class="form-label">Số tầng</label>
									<input type="number" id="branchQuantityFloor-field" class="form-control" name="QuantityFloor" placeholder="Số lượng nhân viên" required />
									<div class="invalid-feedback">
										Vui lòng nhập số lượng tầng.
									</div>
								</div>
								<div class="col-5 ms-3">
									<label for="branchQuantityRoom-field" class="form-label">Số lượng phòng</label>
									<input type="number" id="branchQuantityRoom-field" class="form-control" name="QuantityRoom" placeholder="Số lượng phòng" required />
									<div class="invalid-feedback">
										Vui lòng nhập số lượng phòng.
									</div>
								</div>
							</div>
							<div class="mb-3">
								<label for="branchHotelId-field" class="form-label">Thuộc khách sạn</label>
								@await Component.InvokeAsync("SelectListHotel", new
									{
										selectedValue = Model?.HotelId,
										_for = "HotelId",
										allowNull = false
									})
								<div class="invalid-feedback">
									Vui lòng chọn khách sạn.
								</div>
							</div>
							<div class="mb-3">
								<label for="branchDesc-field" class="form-label">Mô tả</label>
								<textarea textarea type="text" id="branchDesc-field" class="form-control" col="3" name="Description" placeholder="Mô tả"></textarea>
							</div>
						</div>
						<div class="position-relative col-8 col-sm-6 ms-5">
							<div style="opacity: 1">
								<div class="text-center justify-content-center align-items-center" style="border: dotted 2px rgb(139, 139, 139);  width: 21.875rem; height: 12.5rem">
									<img id="imagePreview" src="/" alt="" style="width: 21.6875rem; height: 12.25rem;object-fit:cover; display: none">
									<i id="iconPreview" class="fas fa-cloud-upload-alt" style="font-size: 90px; color: rgb(10, 176, 202); margin-top:40px"></i>
								</div>
								<input name="ImgPath" class="form-control border border-secondary position-absolute" type="file" id="fileInput2" style="width: 21.875rem; height: 12.5rem; opacity: 0; top: 0" />
							</div>
							<div class="invalid-feedback">
								Vui lòng nhập ảnh.
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<div class="hstack gap-2 justify-content-end">
						<button type="submit" class="btn btn-success" id="edit-btn">Cập nhật</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
<!--end modal -->