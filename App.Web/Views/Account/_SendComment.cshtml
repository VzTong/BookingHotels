@model App.Web.ViewModels.Cmt.SendCmtVM
@using App.Share.Consts

<form asp-action="SendComment" asp-controller="Account" method="post" autocomplete="off">
	<div class="mb-3">
		<label asp-for="@Model.Description" class="form-label">Nội dung đánh giá:</label>
		<textarea class="form-control" asp-for="@Model.Description" id="description" rows="4" placeholder="Nhập nội dung đánh giá"></textarea>
	</div>
	<div class="mb-3">
		<label asp-for="@Model.Rating" class="form-label">Xếp hạng:</label>
		<select asp-for="@Model.Rating" class="form-select" id="Rating">
			<option value="@DB.CommentRating.GREAT_ID">
				@DB.CommentRating.GREAT
			</option>
			<option value="@DB.CommentRating.GOOD_ID">
				@DB.CommentRating.GOOD
			</option>
			<option value="@DB.CommentRating.MEDIUM_ID">
				@DB.CommentRating.MEDIUM
			</option>
			<option value="@DB.CommentRating.LEAST_ID">
				@DB.CommentRating.LEAST
			</option>
			<option value="@DB.CommentRating.VERY_POOR_ID">
				@DB.CommentRating.VERY_POOR
			</option>
		</select>
	</div>
	<button type="submit" class="btn btn-primary">Gửi đánh giá</button>
</form>