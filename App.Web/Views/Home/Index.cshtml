@{
	ViewData["Title"] = "Trang chủ";
}

<partial name="_SearchBar" />

<!-- Danh sách khách sạn -->
@await Component.InvokeAsync("HotelAtHome")

<!-- Giới thiệu trang web -->
<div class="site-section">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-6 mb-5 mb-md-0">
				<div class="img-border">
					<a href="~/clientlte/images/VidReviewWeb.mp4" class="popup-vimeo image-play">
						<span class="icon-wrap">
							<span class="icon icon-play"></span>
						</span>
						<img src="~/clientlte/images/img_2.jpg" alt="" class="img-fluid">
					</a>
				</div>
				<img src="~/clientlte/images/img_1.jpg" alt="Image" class="img-fluid image-absolute" style="border-radius: 30px;">
			</div>
			<div class="col-md-5 ml-auto">
				<div class="section-heading text-left">
					<h2 class="mb-5">Thông tin</h2>
				</div>
				<p class="mb-4">
					Trang web Đặt Phòng Nhanh mang đến trải nghiệm đặt phòng tiện lợi, kết hợp giữa hiện đại và tinh tế. Đặt phòng ngay hôm nay để nhận ưu đãi hấp dẫn, đảm bảo một kỳ nghỉ hoàn hảo dành riêng cho bạn!
				</p>
				<p>
					<a asp-action="About" asp-controller="Home" >
						Xem chi tiết <span class="icon-arrow-right small"></span>
					</a>
				</p>
			</div>
		</div>
	</div>
</div>

<!-- Các dịch vụ -->
<div class="site-section">
	<div class="container">
		<div class="row">
			<div class="col-md-6 mx-auto text-center mb-5 section-heading">
				<h2 class="mb-5">Các dịch vụ</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="text-center p-4 item">
					<span class="flaticon-pool display-3 mb-3 d-block text-info"></span>
					<h2 class="h5">Hồ bơi</h2>
				</div>
			</div>
			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="text-center p-4 item">
					<span class="flaticon-desk display-3 mb-3 d-block text-info"></span>
					<h2 class="h5">Gọi thức ăn nhanh</h2>
				</div>
			</div>
			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="text-center p-4 item">
					<span class="flaticon-exit display-3 mb-3 d-block text-info"></span>
					<h2 class="h5">Thoát hiểm an toàn</h2>
				</div>
			</div>
			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="text-center p-4 item">
					<span class="flaticon-parking display-3 mb-3 d-block text-info"></span>
					<h2 class="h5">Bãi đổ xe</h2>
				</div>
			</div>

			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="text-center p-4 item">
					<span class="flaticon-hair-dryer display-3 mb-3 d-block text-info"></span>
					<h2 class="h5">Tạo mẫu tóc</h2>
				</div>
			</div>

			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="text-center p-4 item">
					<span class="flaticon-minibar display-3 mb-3 d-block text-info"></span>
					<h2 class="h5">Quầy bar</h2>
				</div>
			</div>
			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="text-center p-4 item">
					<span class="flaticon-drink display-3 mb-3 d-block text-info"></span>
					<h2 class="h5">Thức uống</h2>
				</div>
			</div>
			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="text-center p-4 item">
					<span class="flaticon-cab display-3 mb-3 d-block text-info"></span>
					<h2 class="h5">Thuê ô tô</h2>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Kết nối với đối tác -->
<div class="py-5 upcoming-events" style="background-image: url('/clientlte/images/hero_1.jpg'); background-attachment: fixed; position: relative;">
	<div class="overlay"></div>
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-6">
				<h2 class="text-white">Trở thành đối tác của chúng tôi</h2>
				<a asp-action="Contact" 
					asp-controller="Home" 
					class="text-white btn btn-outline-warning text-uppercase">
					Kết nối
				</a>
			</div>
			<div class="col-md-6">
				<span class="caption text-white">Đừng chỉ chờ khách hàng đến – hãy đưa khách sạn của bạn đến với họ!</span>
				<div class="cap-detail text-white">
					Khách sạn của bạn xứng đáng được biết đến nhiều hơn!
					Hãy cùng chúng tôi mở cửa ra thế giới online, thu hút nhiều khách hàng mới mỗi ngày!
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Giới thiệu địa điểm - một vài chi nhánh-->
@await Component.InvokeAsync("BranchAtHome")

<!-- Danh sách phòng -->
@await Component.InvokeAsync("RoomAtHome")

<!-- Đánh giá -->
@await Component.InvokeAsync("CmtAtHome")

<partial name="_ContactInfo" />