<div class="site-section  avalability-room">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 bg-white shadow p-4 rounded">
                <h5 class="mb-4">Chọn nơi bạn muốn ở lại (●'◡'●)</h5>
                <form class="row g-3 align-items-end">
                    <!-- Location Field (input) -->
                    <div class="col-md-3">
                        <label for="location" class="form-label" style="font-weight: 500;">Điểm đến</label>
                        <input type="text" id="location" class="form-control shadow-none" placeholder="Enter location">
                    </div>

                    <!-- Check-in Field -->
                    <div class="col-md-2">
                        <label for="checkin" class="form-label" style="font-weight: 500;">Check-in</label>
                        <input type="date" id="checkin" class="form-control shadow-none">
                    </div>

                    <!-- Check-out Field -->
                    <div class="col-md-2">
                        <label for="checkout" class="form-label" style="font-weight: 500;">Check-out</label>
                        <input type="date" id="checkout" class="form-control shadow-none">
                    </div>

                    <!-- Adults Field -->
                    <div class="col-md-2">
                        <label for="adults" class="form-label" style="font-weight: 500;">Số người ở</label>
                        <select id="adults" class="form-select shadow-none">
                            <option selected>Select menu</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary w-100 p-1">Tìm kiếm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>